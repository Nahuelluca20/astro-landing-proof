---
import { twMerge } from 'tailwind-merge'
import Button from './Button.astro';

interface Props {
  title: string;
  mainly?: boolean;
  withoutImage?: boolean;
  body: string;
  buttonText: string;
  buttonLink: string;
}

const { title, body, buttonLink, buttonText, mainly, withoutImage} = Astro.props;
---

<div class={twMerge("flex flex-col text-white text-center         justify-center items-center gap-8",
  mainly ? "text-secondary-dark" : "text-white"
)}>
  <slot name="before"/>
  <h1 class="font-bold text-4xl">{title}</h1>
  <p class="font-normal text-lg">{body}</p>
  <div class="mt-8">
    <Button text={buttonText}  link={buttonLink}>
      <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 6H11" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M6 1L11 6L6 11" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </Button>
  </div>
  {!withoutImage && <div class="w-[286px] h-[191px] mt-10 bg-secondary-skyblue"></div>}
  <slot name="after"/>
</div>