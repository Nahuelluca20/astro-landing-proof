---
import { twMerge } from 'tailwind-merge'
import ListItem from '../ListItem.astro'
import Button from '../Button.astro'

interface Props {
  mainly: boolean;
}

const { mainly } = Astro.props
---

<div class={twMerge("p-4 rounded-xl border-2 shadow-md", 
    mainly ? 
    "bg-primary-blue text-white border-primary-blue" : 
    "bg-white text-secondary-dark border-secondary-yellow",
  )}>
  <div class="space-y-8">
    <h2 class="font-semibold text-2xl">Personal</h2>
    <h3 class="font-bold text-4xl">$11.2</h3>
    <p class="font-normal text-base">Keep home and family on track</p>
    <ul class="space-y-6 pb-8">
      <ListItem mainly={mainly}/>
      <ListItem mainly={mainly}/>
      <ListItem mainly={mainly}/>
      <ListItem mainly={mainly}/>
      <ListItem mainly={mainly}/>
      <ListItem mainly={mainly}/>
    </ul>
    <Button outline text="Get Started" link='sarasa'/>
  </div>

</div>